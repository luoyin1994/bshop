extends ../layout
block style
  link(rel='stylesheet' href='/libs/stylus/pages/reader/main.css')

block content
  include ../component/reader/header

  #container(v-bind:class='{night:nightFlag}' v-bind:style="{'background-color':bgColor}" @click='toggleTopBottom()' )
    h1 {{fictionData.t}}
    section
      p(v-for='item in fictionData.p' v-bind:style="{'font-size':passageFontSize}") {{item}}
    include ../component/reader/page-turning

  include ../component/reader/footer
  include ../component/popUp/main

block script
  script(src='/libs/js/bundle.js')
